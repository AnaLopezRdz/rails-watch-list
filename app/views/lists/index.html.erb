<div class="banner">
  <div>
    <h1>Save any kind of movies</h1>
    <h2>Classic</h2>
  </div>
</div>
  <div class="button-addmovie-showpage">
    <div class="button-width">
      <%= link_to "Add List", new_list_path %>
    </div>
  </div>
<div class="container mt-5" >
  <% if @lists.empty? %>
    <h1>your data base is empty</h1>
  <% else %>
    <div class="movie-list-row">
      <% @lists.each do |list| %>
        <div class="movie-list-card" style="background-image: url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
          <div class="h2-center">
            <h2><%= link_to list.name, list_path(list) %></h2>
          </div>
          <div class="card-actions">
            <%= link_to edit_list_path(list), class: 'edit-link' do %>
              <%= content_tag :i, '', class: 'fa-solid fa-pen-to-square' %>
            <% end %>
            <%= link_to list_path(list),
                  method: :delete,
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: 'delete-link' do %>
              <%= content_tag :i, '', class: 'fa-solid fa-trash' %>
            <% end %>
            <%= link_to "Add Bookmark", new_list_bookmark_path(list), class: "add_bookmark" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
